@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Author>;

<h4>Available Authors</h4>
@if (User.Identity.IsAuthenticated)
{
  @Html.ActionLink("Add New Author", "Create")
}
<hr/>

@if (Model.Count == 0)
{
  <h4>There are currently no authors available.</h4>
}
else
{
  <ul>
    @foreach (Author author in Model)
    {
      <h4><li>@Html.ActionLink(author.Name, "Details", new { id = author.AuthorId })</li></h4>
    }
  </ul>
}